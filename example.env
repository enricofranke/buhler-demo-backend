# ===========================================
# explore.dg Environment Configuration
# ===========================================
# Copy this file to .env and adjust the values for your environment

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=development
APP_PORT=3000
APP_HOST=localhost
APP_NAME=explore.dg

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
# For local development (docker/local)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/explore_dg?schema=public"

# For development environment (docker/develop)
# DATABASE_URL="postgresql://postgres:dev_password@localhost:5433/explore_dg_dev?schema=public"

# For production environment (docker/production)
# DATABASE_URL="postgresql://postgres:your_secure_password@localhost:5432/explore_dg_prod?schema=public"

# Individual Database Settings (for Docker Compose)
POSTGRES_DB=explore_dg
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRATION=7d

# ===========================================
# API Configuration
# ===========================================
API_VERSION=v1
API_PREFIX=api
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=debug
LOG_FORMAT=combined

# ===========================================
# Cache Configuration
# ===========================================
CACHE_TTL=300
CACHE_MAX=100

# ===========================================
# Rate Limiting
# ===========================================
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# ===========================================
# File Upload Configuration
# ===========================================
UPLOAD_DEST=./uploads
MAX_FILE_SIZE=10485760

# ===========================================
# External Services (optional)
# ===========================================
# REDIS_URL=redis://localhost:6379
# SMTP_HOST=localhost
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# SMTP_FROM=noreply@explore-dg.com

# ===========================================
# Development Tools
# ===========================================
# Enable Prisma Studio
PRISMA_STUDIO_PORT=5555

# Enable NestJS DevTools
DEVTOOLS_PORT=8000 